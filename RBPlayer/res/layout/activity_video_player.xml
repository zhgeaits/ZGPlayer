<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/background_dark"
        >

    <android.opengl.GLSurfaceView
            android:id="@+id/videoview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            />

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/seekbar_bg_up"
            >

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="分辨率:1920x1080"
                  android:id="@+id/info"
                  android:layout_margin="10dp"
                  android:textSize="18sp"
                  android:textColor="@android:color/white"
                />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="filename"
                  android:id="@+id/filename"
                  android:layout_margin="10dp"
                  android:textSize="18sp"
                  android:textColor="@android:color/white"
                  android:layout_toRightOf="@+id/info"
                />

        <Button android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/mode_0"
                android:layout_alignParentRight="true"
                android:id="@+id/autorotate"/>

    </RelativeLayout>

    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
            >
        <Button android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/mode_0"
                android:layout_alignParentRight="true"
                android:id="@+id/floatwindow"/>

        <Button android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/mode_1"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/floatwindow"
                android:id="@+id/screenshot"/>

        <Button android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/mode_0"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/screenshot"
                android:id="@+id/changesize"/>

        <Button android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/convert"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_below="@+id/changesize"
                android:id="@+id/mode"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/seekbar_bg_down"
            android:id="@+id/playControl"
            >

        <Button android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/btn_pause_selecter"
                android:id="@+id/play_btn"
                android:layout_centerVertical="true"
                />

        <SeekBar
                 style="?android:attr/progressBarStyleHorizontal"
                 android:thumbOffset="6dip"
                 android:paddingLeft="6dp"
                 android:paddingRight="5dp"
                 android:layout_centerVertical="true"
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:id="@+id/seekbar"
                 android:minHeight="20dip"
                 android:maxHeight="20dip"
                 android:layout_toRightOf="@+id/play_btn"
                 android:layout_toLeftOf="@+id/playtime"
                 android:thumb="@drawable/progress_thumb"/>

        <TextView android:id="@+id/playtime"
                  android:layout_centerVertical="true"
                  android:textSize="17sp"
                  android:textColor="#CCCCCC"
                  android:text="00:00/00:00"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toLeftOf="@+id/adjustcontainer"
                  />

        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:id="@+id/adjustcontainer"
                >

            <Button android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/mode_0"
                    android:id="@+id/adjust_reset"/>

            <Button android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/adjust_sub"
                    android:layout_toRightOf="@+id/adjust_reset"
                    android:id="@+id/adjust_sub"/>

            <Button android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/adjust_add"
                    android:layout_toRightOf="@+id/adjust_sub"
                    android:id="@+id/adjust_add"/>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
