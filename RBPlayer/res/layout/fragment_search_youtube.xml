<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/org.zhangge.rbplayer"
    android:id="@+id/search_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/touch_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/content_area"
        android:background="#f1f1f1" >

    </RelativeLayout>
    
    <ProgressBar
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            />

    <RelativeLayout
        android:id="@+id/content_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1f1f1" >

        <RelativeLayout
            android:id="@+id/live_top"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffcccccc"
            android:orientation="horizontal" >

            <org.zhangge.almightyzgbox_android.ui.widget.EasyClearEditText
                android:id="@+id/search_input"
                android:layout_width="fill_parent"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/search_cancel_tip"
                android:background="@drawable/search_exittext_bg"
                android:drawableLeft="@drawable/icon_search_small"
                android:drawablePadding="4dp"
                android:focusable="true"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:paddingRight="8dp"
                android:textColor="#242424"
                android:textColorHint="#999999"
                android:textSize="14sp"
                app:tipsIcon="@drawable/btn_clear" />

            <TextView
                android:id="@+id/search_cancel_tip"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_et_search"
                android:gravity="center"
                android:text="取消"
                android:textColor="#666666"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>